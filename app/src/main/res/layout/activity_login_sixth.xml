<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/sixthbg"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/blackish"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/blackish_inverse">

            <Space
                android:id="@+id/space2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/space2"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="35dp"
                android:text="We'll send a verification\ncode in the next step"
                android:textAlignment="center"
                android:textColor="#d0d0d0"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/textView6"
                android:layout_centerHorizontal="true"
                android:fontFamily="@font/prata"
                android:text="Setup using your \nphone number."
                android:textAlignment="center"
                android:textColor="#dcdcdc"
                android:textSize="36sp" />

            <EditText
                android:id="@+id/number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/space2"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="60dp"
                android:background="@drawable/circlebutton4"
                android:ems="10"
                android:hint="+XX 000 000 0000"
                android:inputType="phone"
                android:textAlignment="center"
                android:textColor="#dcdcdc"
                android:textColorHint="#d0d0d0" />

            <TextView
                android:id="@+id/fakebutton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/number"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="24dp"
                android:text="Please mention your country code properly"
                android:textAlignment="center"
                android:textColor="#dcdcdc" />
            <ImageButton
                android:id="@+id/backarrow"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="20dp"
                android:background="#00000000"
                app:srcCompat="@drawable/back" />
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>