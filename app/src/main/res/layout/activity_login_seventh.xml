<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/seventhbg"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/blackish"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/blackish_inverse">

            <Space
                android:id="@+id/space2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true" />

            <Button
                android:id="@+id/birthday"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/space2"
                android:layout_centerHorizontal="true"
                android:background="@drawable/circlebutton_grad"
                android:drawableRight="@drawable/grad_down"
                android:paddingLeft="40dp"
                android:paddingRight="40dp"
                android:text="14 October, 1996"
                android:textAlignment="center"
                android:textColor="#dcdcdc"
                android:textColorHint="#dcdcdc" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/space2"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="41dp"
                android:text="Choose your birthday"
                android:textAlignment="center"
                android:textColor="#d0d0d0" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/textView4"
                android:layout_alignParentStart="true"
                android:layout_centerHorizontal="true"
                android:layout_centerInParent="false"
                android:layout_centerVertical="false"
                android:layout_marginBottom="21dp"
                android:fontFamily="@font/prata"
                android:text="Let us know \nyour birthday"
                android:textAlignment="center"
                android:textColor="#dcdcdc"
                android:textSize="36sp" />

            <ImageButton
                android:id="@+id/backarrow"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="20dp"
                android:background="#00000000"
                app:srcCompat="@drawable/back" />

            <TextView
                android:id="@+id/next"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="82dp"
                android:text="May be later"
                android:textColor="#d0d0d0" />

            <TextView
                android:id="@+id/textView8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/birthday"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="39dp"
                android:text="You must be xx years or older to get an\n access to the contents"
                android:textAlignment="center"
                android:textColor="#d0d0d0" />
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>